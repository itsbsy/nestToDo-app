// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Todo {
  id    String   @unique @default(uuid())
  title String  
  description  String?
  status status 

  @@map("todo")
 
}

enum status {
    OPEN
    IN_PROGRESS
    DONE
}